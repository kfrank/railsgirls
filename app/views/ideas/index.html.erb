<h1>Listing ideas</h1>

<div class="row">
  <% @ideas.each do |idea| %>
    <div class="span4 block">
      <h2><%= idea.name %></h2>
      <p><%= idea.description %></p>
      <%= idea.picture %>
      <br>
      <%= link_to 'Show', idea %>
      <%= link_to 'Edit', edit_idea_path(idea) %>
      <%= link_to 'Destroy', idea, confirm: 'Are you sure?', method: :delete %>
    </div>
  <% end %>
</div>
